{
  "name": "root",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "build": "lerna run build",
    "build:annotations": "lerna run build --scope='*/annotations'",
    "build:axes": "lerna run build --scope='*/axes'",
    "build:charts": "lerna run build --scope='react-financial-charts'",
    "build:coordinates": "lerna run build --scope='*/coordinates'",
    "build:core": "lerna run build --scope='*/core'",
    "build:indicators": "lerna run build --scope='*/indicators'",
    "build:interactive": "lerna run build --scope='*/interactive'",
    "build:scales": "lerna run build --scope='*/scales'",
    "build:series": "lerna run build --scope='*/series'",
    "build:tooltip": "lerna run build --scope='*/tooltip'",
    "build:utils": "lerna run build --scope='*/utils'",
    "clean": "run-s clean:packages clean:modules clean:root",
    "clean:packages": "lerna run clean",
    "clean:modules": "lerna clean --yes",
    "clean:root": "echo '***REMEMBER*** delete the root node_modules folder'",
    "docs": "run-s build docs:stories",
    "docs:stories": "lerna run docs --stream",
    "link": "lerna link convert",
    "lint": "eslint . --ext ts --ext tsx --quiet",
    "lint:fix": "eslint . --ext ts --ext tsx --quiet --fix",
    "start": "run-p watch start:stories",
    "start:stories": "lerna run start --stream",
    "test": "lerna run test --stream",
    "prestart": "pnpm run build",
    "prepublishOnly": "pnpm run build",
    "publish": "lerna publish from-package",
    "release": "lerna version",
    "release:pre": "lerna version --conventional-prerelease",
    "release:grad": "lerna version --conventional-graduate",
    "ci:publish": "lerna publish from-package --yes",
    "ci:release": "lerna version --yes",
    "ci:release:pre": "lerna version --conventional-prerelease --yes",
    "ci:release:grad": "lerna version --conventional-graduate --yes",
    "watch": "lerna run watch --parallel"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/plugin-transform-typescript": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@chromatic-com/storybook": "^4.1.3",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-webpack5-compiler-babel": "^4.0.0",
    "@storybook/cli": "^10.1.11",
    "@storybook/react-webpack5": "^10.1.11",
    "@swc/core": "^1.15.8",
    "@swc/jest": "^0.2.39",
    "@types/d3-array": "^3.2.2",
    "@types/d3-dsv": "^3.0.7",
    "@types/d3-force": "^3.0.10",
    "@types/d3-format": "^3.0.4",
    "@types/d3-interpolate": "^3.0.4",
    "@types/d3-path": "^3.1.1",
    "@types/d3-scale": "^4.0.9",
    "@types/d3-selection": "^3.0.11",
    "@types/d3-shape": "^3.1.8",
    "@types/d3-time": "^3.0.4",
    "@types/d3-time-format": "^4.0.3",
    "@types/jest": "^30.0.0",
    "@types/lodash.flattendeep": "^4.4.9",
    "@types/node": "^22.19.5",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "babel-loader": "^10.0.0",
    "d3-array": "^3.2.4",
    "d3-color": "^3.1.0",
    "d3-format": "^3.1.0",
    "d3-interpolate": "^3.0.1",
    "d3-scale": "^4.0.2",
    "d3-selection": "^3.0.0",
    "d3-time": "^3.1.0",
    "d3-time-format": "^4.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-storybook": "10.1.11",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "lerna": "^9.0.3",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "source-map-loader": "^5.0.0",
    "storybook": "^10.1.11",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1"
  },
  "dependencies": {
    "@lfurzewaddock/react-financial-charts": "workspace:*",
    "@lfurzewaddock/react-financial-charts-annotations": "workspace:*",
    "@lfurzewaddock/react-financial-charts-axes": "workspace:*",
    "@lfurzewaddock/react-financial-charts-coordinates": "workspace:*",
    "@lfurzewaddock/react-financial-charts-core": "workspace:*",
    "@lfurzewaddock/react-financial-charts-indicators": "workspace:*",
    "@lfurzewaddock/react-financial-charts-interactive": "workspace:*",
    "@lfurzewaddock/react-financial-charts-scales": "workspace:*",
    "@lfurzewaddock/react-financial-charts-series": "workspace:*",
    "@lfurzewaddock/react-financial-charts-stories": "workspace:*",
    "@lfurzewaddock/react-financial-charts-tooltip": "workspace:*",
    "@lfurzewaddock/react-financial-charts-utils": "workspace:*"
  }
}
