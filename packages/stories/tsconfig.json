{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": [
      "es6",
      "esnext",
      "dom",
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noResolve": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es6",
    "baseUrl": ".",
    "paths": {
        "tslib": ["./node_modules/tslib/tslib.d.ts"],
        "react-financial-charts": ["../../packages/charts"],
        "react-financial-charts/*": ["../../packages/charts/*"],
        "@react-financial-charts/annotations": ["../../packages/annotations"],
        "@react-financial-charts/annotations/*": ["../../packages/annotations/*"],
        "@react-financial-charts/axes": ["../../packages/axes"],
        "@react-financial-charts/axes/*": ["../../packages/axes/*"],
        "@react-financial-charts/coordinates": ["../../packages/coordinates"],
        "@react-financial-charts/coordinates/*": ["../../packages/coordinates/*"],
        "@react-financial-charts/core": ["../../packages/core"],
        "@react-financial-charts/core/*": ["../../packages/core/*"],
        "@react-financial-charts/indicators": ["../../packages/indicators"],
        "@react-financial-charts/indicators/*": ["../../packages/indicators/*"],
        "@react-financial-charts/interactive": ["../../packages/interactive"],
        "@react-financial-charts/interactive/*": ["../../packages/interactive/*"],
        "@react-financial-charts/scales": ["../../packages/scales"],
        "@react-financial-charts/scales/*": ["../../packages/scales/*"],
        "@react-financial-charts/series": ["../../packages/series"],
        "@react-financial-charts/series/*": ["../../packages/series/*"],
        "@react-financial-charts/tooltip": ["../../packages/tooltip"],
        "@react-financial-charts/tooltip/*": ["../../packages/tooltip/*"],
        "@react-financial-charts/utils": ["../../packages/utils"],
        "@react-financial-charts/utils/*": ["../../packages/utils/*"]
    }
  },
  "include": [
    "src",
    "../series/src"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
