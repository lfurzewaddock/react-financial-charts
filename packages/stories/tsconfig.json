{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "jsx": "react",
        "lib": ["es6", "esnext", "dom"],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noResolve": false,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es6",
        "baseUrl": ".",
        "paths": {
            "tslib": ["./node_modules/tslib/tslib.d.ts"],
            "react-financial-charts": ["../../packages/charts"],
            "react-financial-charts/*": ["../../packages/charts/*"],
            "@lfurzewaddock/react-financial-charts-annotations": ["../../packages/annotations"],
            "@lfurzewaddock/react-financial-charts-annotations/*": ["../../packages/annotations/*"],
            "@lfurzewaddock/react-financial-charts-axes": ["../../packages/axes"],
            "@lfurzewaddock/react-financial-charts-axes/*": ["../../packages/axes/*"],
            "@lfurzewaddock/react-financial-charts-coordinates": ["../../packages/coordinates"],
            "@lfurzewaddock/react-financial-charts-coordinates/*": ["../../packages/coordinates/*"],
            "@lfurzewaddock/react-financial-charts-core": ["../../packages/core"],
            "@lfurzewaddock/react-financial-charts-core/*": ["../../packages/core/*"],
            "@lfurzewaddock/react-financial-charts-indicators": ["../../packages/indicators"],
            "@lfurzewaddock/react-financial-charts-indicators/*": ["../../packages/indicators/*"],
            "@lfurzewaddock/react-financial-charts-interactive": ["../../packages/interactive"],
            "@lfurzewaddock/react-financial-charts-interactive/*": ["../../packages/interactive/*"],
            "@lfurzewaddock/react-financial-charts-scales": ["../../packages/scales"],
            "@lfurzewaddock/react-financial-charts-scales/*": ["../../packages/scales/*"],
            "@lfurzewaddock/react-financial-charts-series": ["../../packages/series"],
            "@lfurzewaddock/react-financial-charts-series/*": ["../../packages/series/*"],
            "@lfurzewaddock/react-financial-charts-tooltip": ["../../packages/tooltip"],
            "@lfurzewaddock/react-financial-charts-tooltip/*": ["../../packages/tooltip/*"],
            "@lfurzewaddock/react-financial-charts-utils": ["../../packages/utils"],
            "@lfurzewaddock/react-financial-charts-utils/*": ["../../packages/utils/*"]
        }
    },
    "include": ["src", "../series/src"],
    "exclude": ["node_modules", "lib"]
}
